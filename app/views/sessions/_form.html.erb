<div class="container">
    <div class="row justify-content-center">
    <div class="col-10">

   
   
    <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>

        <div class="form-group row">
             <%= form.label :email, class: "col-2 col-form-label text-light", placeholder: "Enter your email" %>
        <div class="col-10">
        <%= form.email_field :email %>
        </div>
    </div>
        
        <div class="form-group row">
            <%= form.label :password, class: "col-2 col-form-label text-light", placeholder: "Enter your password" %>
        <div class="col-10">
            <%= form.password_field :password %>

        </div>
    </div>

    <div>
    <%= form.submit "Login", class: "btn btn-outline-light btn-lg" %>
   </div>
        <% end %>
    </div>
    </div>
    </div>

    

