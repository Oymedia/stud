<div class="container">
    <div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors', obj: @user %>
   
   
    <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
        <div class="form-group row">
            <%= form.label :username, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
            <%= form.text_field :username %>
        </div>
    </div>

        <div class="form-group row">
             <%= form.label :email, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
        <%= form.email_field :email %>
        </div>
    </div>
        
        <div class="form-group row">
            <%= form.label :password, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
            <%= form.password_field :password %>

        </div>
    </div>

    <div>
    <%= form.submit "Signup", class: "btn btn-outline-light btn-lg" %>
   </div>
        <% end %>
    </div>
    </div>
    </div>

    

